<Window x:Class="LibraryDBGuiApplication.View.AddCategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryDBGuiApplication.View"
        mc:Ignorable="d"
        Title="AddCategoryWindow" Height="150" Width="300">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal" >
                <Label Content="Category Name"/>
                <TextBox x:Name="CategoryNameTextbox" Width="200"/>
            </StackPanel>
            <Button Content="Add Category" Margin="50,10" Click="AddCategoryButton"/>
        </StackPanel>
    </Grid>
</Window>
