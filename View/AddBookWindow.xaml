<Window x:Class="LibraryDBGuiApplication.AddBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryDBGuiApplication"
        mc:Ignorable="d"
        Title="AddBookWindow" Height="150" Width="300">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <Label Content="BookName: " />
                <TextBox x:Name="BooknameTextbox" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,10">
                <Label Content="CategoryName: "/>
                <ComboBox x:Name="CategoryComboboxSelection" Width="180"/>
            </StackPanel>
            <Button Content="Save" Click="AddBookToDBButton"/>
        </StackPanel>
    </Grid>
</Window>
