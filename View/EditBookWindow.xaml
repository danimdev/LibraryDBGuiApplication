<Window x:Class="LibraryDBGuiApplication.View.EditBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryDBGuiApplication.View"
        mc:Ignorable="d"
        Title="EditBookWindow" Height="200" Width="200">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="BookID"/>
            <ComboBox x:Name="BookIDComboBox" Width="150"/>
            <Label Content="New BookName"/>
            <TextBox x:Name="NewBookNameTextBox"/>
            <Button Content="Apply Changes" Margin="0,10"/>
        </StackPanel>
    </Grid>
</Window>
